<% layout('layout/boilerplate') -%>



<div class="container">
    <div class="row bg-light  m-5 p-5 ">
        <div class="col d-flex justify-content-around align-items-center">
            <h1 class=" display-3 text-success p-2 mb-3"><%=plant.name %></h1>
            <a class="btn btn-md btn-outline-success my-5" href="/plants">Back to all plants</a>
            <a class="btn btn-md btn-outline-success my-5" href="/mycollection">Back to my collection</a>
        </div>
    </div>

    <div class="row bg-light d-flex align-items-start m-5 p-5">
        <!--1ere colonne-->
        <div class="col-md-6  mx-auto py-4">

            <!--CAROUSEL-->

            <div id="carouselExampleControls" class="carousel slide bg-light p-0 m-auto" data-ride="carousel">
                <div class="carousel-inner">
                    <% plant.images.forEach((img, i)=> { %>
                    <div class="carousel-item <%= i === 0 ? 'active': ''%>">
                        <img class="d-block w-100" src="<%=img.url%>" alt="First slide">

                    </div> <%})%>

                    <%if (plant.images.length === 0 ){%>
                    <div class="card-body p-0">
                        <img class="card-img" src="/addImg.png" alt="First slide">
                    </div>
                    <%}%>
                </div>

                     <% if(plant.images.length >1){ %>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <% } %>



                </div>
            </div>

            <!--2e colonne-->
            <!--CARD-->

            <div class="col-md-6 justify-content-around py-4">
                <div class="card m-auto p-0">
                    <div class="card-body ">
                        <h5 class="card-title">History</h5>

                        <p class="card-text pt-3"><b>Date of purchase:</b> <%= dateFormated%></p>
                        <p class="card-text pt-3"><b>Family:</b> <a
                                href=" /plants?family=<%=plant.family%>"><%=plant.family%></a>
                        </p>
                        <p class="card-text pt-3"><b>Watering:</b> <%=plant.water%></p>
                        <p class="card-text pt-3"><b>Notes:</b> <%=plant.notes%></p>
                        <%  if ( currentUser && plant.owner.equals(currentUser._id)) {%>
                        <form class="form-group py-2" action="/plants/<%=plant._id%>?_method=DELETE" method="POST">
                            <a href="/plants/<%=plant._id%>/edit" class=" mt-3 btn btn-sm btn-success">Edit this
                                plant</a>
                            <button class="btn btn-sm btn-outline-danger mt-3 ml-3">Remove from my collection</button>
                        </form>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!--2e ROW CARE JOURNAL-->
        <%  if (currentUser && plant.owner.equals(currentUser._id)) {%>
        <div class="row bg-light m-5 p-5">
            <div class="col">
                <h3 class="display-5 text-success pb-4">Care Journal</h3>
                <div class="card">
                    <div class="card-body">



                        <form action="/plants/<%= plant._id%>/journals " novalidate class="validated-form"
                            method="POST">
                            <div class="form-group mb-3">
                                <label for="journals"><b>New Entry</b></label>
                                <textarea class="form-control" name="journal[body]" id="journals"
                                    value="<%=plant.journals%>" cols="80" rows="2" required></textarea>
                            </div>

                            <button class="btn btn-sm px-2 btn-success">Submit</button>
                        </form>



                        <% for (let journal of plant.journals) { %>
                        <div class="card w-75 my-3 ">
                            <div class="card-body">
                                <p class="card-text"> <%= journal.body %></p>
                            </div>
                        </div>
                        <form action="/plants/<%=plant._id%>/journals/<%=journal._id%>?_method=DELETE" method="POST">
                            <button class=" btn  btn-sm btn-outline-danger">Delete</button>
                        </form>
                        <% } %>
                        <% } %>

                    </div>
                </div>

            </div>

        </div>
    </div>










    <!--3e colonne-->

    <div class="container">


        <div class="row d-flex align-items-start m-5 p-5">
            <div class="col">
                <h3 class="display-5 pb-4 text-success ">Comments</h3>
                <div class="card mx-auto">
                    <div class="card-body">
                        <%  if (currentUser) {%>
                        <form action="/plants/<%=plant._id%>/comments" method="POST" novalidate
                            class="validated-form mx-auto">
                            <div class=" form-group mb-3">
                                <label for="body"><b>New Comment</b></label>
                                <textarea class="form-control" name="comment[body]" id="" cols="20" rows="2"
                                    required></textarea>
                            </div>
                            <button class="btn btn-sm btn-success px-2">Submit</button>
                        </form>
                        <%}%>

                        <% for (let comment of plant.comments) { %>
                        <div class="card my-3">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">By <%=comment.author.username %> </h6>
                                <p class="card-text"> <%= comment.body %></p>


                                <%  if (currentUser && comment.author.equals(currentUser._id)) {%>
                                <form action="/plants/<%=plant._id%>/comments/<%=comment._id%>?_method=DELETE"
                                    method="POST">
                                    <button class=" btn  btn-sm btn-outline-danger">Delete</button>
                                </form>
                                <%}%>
                            </div>
                        </div>
                        <%}%>



                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>